<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2d3436"
    tools:context=".MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="end">
            <TextView
                android:id="@+id/workingsTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="35sp" />
            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="35sp"
                android:textAlignment="textEnd"
                android:gravity="center_vertical"
                android:layout_gravity="end"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnClear"
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:backgroundTint="@color/button_color1"
                        android:text="C"
                        android:textColor="#eb4d4b"
                        android:textSize="@dimen/textsize_button"
                        app:cornerRadius="@dimen/radius"
                        android:layout_margin="@dimen/button_margin"
                        android:onClick="clearOnClick"/>

                    <Button
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:backgroundTint="@color/button_color1"
                        android:text="()"
                        android:textColor="#6ab04c"
                        android:textSize="@dimen/textsize_button"
                        app:cornerRadius="@dimen/radius"
                        android:layout_margin="@dimen/button_margin"
                        android:onClick="bracketsOnClick"/>

                    <Button
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:backgroundTint="@color/button_color1"
                        android:text="^"
                        android:textColor="#6ab04c"
                        android:textSize="@dimen/textsize_button"
                        app:cornerRadius="@dimen/radius"
                        android:layout_margin="@dimen/button_margin"
                        android:onClick="powerOfOnClick"/>

                    <Button
                        android:id="@+id/btnDivide"
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:backgroundTint="@color/button_color1"
                        android:text="รท"
                        android:textColor="#6ab04c"
                        android:textSize="@dimen/textsize_button"
                        app:cornerRadius="@dimen/radius"
                        android:layout_margin="@dimen/button_margin"
                        android:onClick="divisionOnClick"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnSeven"
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:backgroundTint="@color/button_color1"
                        android:text="7"
                        android:textSize="@dimen/textsize_button"
                        app:cornerRadius="@dimen/radius"
                        android:layout_margin="@dimen/button_margin"
                        android:onClick="sevenOnClick"/>

                    <Button
                        android:id="@+id/btnEight"
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:backgroundTint="@color/button_color1"
                        android:text="8"
                        android:textSize="@dimen/textsize_button"
                        app:cornerRadius="@dimen/radius"
                        android:layout_margin="@dimen/button_margin"
                        android:onClick="eightOnClick"/>

                    <Button
                        android:id="@+id/btnNine"
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:backgroundTint="@color/button_color1"
                        android:text="9"
                        android:textSize="@dimen/textsize_button"
                        app:cornerRadius="@dimen/radius"
                        android:layout_margin="@dimen/button_margin"
                        android:onClick="nineOnClick"/>

                    <Button
                        android:id="@+id/btnMutiply"
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:backgroundTint="@color/button_color1"
                        android:text="ร"
                        android:textColor="#6ab04c"
                        android:textSize="@dimen/textsize_button"
                        app:cornerRadius="@dimen/radius"
                        android:layout_margin="@dimen/button_margin"
                        android:onClick="timesOnClick"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnFour"
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:backgroundTint="@color/button_color1"
                        android:text="4"
                        android:textSize="@dimen/textsize_button"
                        app:cornerRadius="@dimen/radius"
                        android:layout_margin="@dimen/button_margin"
                        android:onClick="fourOnClick"/>

                    <Button
                        android:id="@+id/btnFive"
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:backgroundTint="@color/button_color1"
                        android:text="5"
                        android:textSize="@dimen/textsize_button"
                        app:cornerRadius="@dimen/radius"
                        android:layout_margin="@dimen/button_margin"
                        android:onClick="fiveOnClick"/>

                    <Button
                        android:id="@+id/btnSix"
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:backgroundTint="@color/button_color1"
                        android:text="6"
                        android:textSize="@dimen/textsize_button"
                        app:cornerRadius="@dimen/radius"
                        android:layout_margin="@dimen/button_margin"
                        android:onClick="sixOnClick"/>

                    <Button
                        android:id="@+id/btnMinus"
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:backgroundTint="@color/button_color1"
                        android:text="-"
                        android:textColor="#6ab04c"
                        android:textSize="@dimen/textsize_button"
                        app:cornerRadius="@dimen/radius"
                        android:layout_margin="@dimen/button_margin"
                        android:onClick="minusOnClick"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnOne"
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:layout_margin="@dimen/button_margin"
                        android:backgroundTint="@color/button_color1"
                        android:onClick="oneOnClick"
                        android:text="1"
                        android:textSize="@dimen/textsize_button"
                        app:cornerRadius="@dimen/radius" />

                    <Button
                        android:id="@+id/btnTwo"
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:backgroundTint="@color/button_color1"
                        android:text="2"
                        android:textSize="@dimen/textsize_button"
                        app:cornerRadius="@dimen/radius"
                        android:layout_margin="@dimen/button_margin"
                        android:onClick="twoOnClick"/>

                    <Button
                        android:id="@+id/btnThree"
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:backgroundTint="@color/button_color1"
                        android:text="3"
                        android:textSize="@dimen/textsize_button"
                        app:cornerRadius="@dimen/radius"
                        android:layout_margin="@dimen/button_margin"
                        android:onClick="threeOnClick"/>

                    <Button
                        android:id="@+id/btnPlus"
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:backgroundTint="@color/button_color1"
                        android:text="+"
                        android:textColor="#6ab04c"
                        android:textSize="@dimen/textsize_button"
                        app:cornerRadius="@dimen/radius"
                        android:layout_margin="@dimen/button_margin"
                        android:onClick="plusOnClick"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">


                    <Button
                        android:id="@+id/btnZero"
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:backgroundTint="@color/button_color1"
                        android:text="0"
                        android:textSize="@dimen/textsize_button"
                        app:cornerRadius="@dimen/radius"
                        android:layout_margin="@dimen/button_margin"
                        android:onClick="zeroOnClick"/>

                    <Button
                        android:id="@+id/btnDot"
                        android:layout_width="@dimen/width_button"
                        android:layout_height="@dimen/height_button"
                        android:backgroundTint="@color/button_color1"
                        android:text="."
                        android:textSize="@dimen/textsize_button"
                        app:cornerRadius="@dimen/radius"
                        android:layout_margin="@dimen/button_margin"
                        android:onClick="decimalOnClick"/>

                    <Button
                        android:layout_width="190dp"
                        android:layout_height="@dimen/height_button"
                        android:backgroundTint="@color/button_color1"
                        android:text="="
                        android:textColor="#6ab04c"
                        android:textSize="@dimen/textsize_button"
                        app:cornerRadius="@dimen/radius"
                        android:layout_margin="@dimen/button_margin"
                        android:onClick="equalsOnClick"/>
                </LinearLayout>
    </LinearLayout>
</LinearLayout>